<?php
$soogiHind = 2.55;   // hind EUR
$soodustus = 15;  // protsent
$toetus    = 1.8;   // EUR

if($soogiHind > 0 and $soodustus > 0 and $toetus > 0) {
    $soodusHind = $soogiHind / 100 * (100 - $soodustus);
    $hindOpilasele = $soodusHind - $toetus;
    echo 'Söögi hind õpilasele on '  .$hindOpilasele.'<br>;
} else {
    echo 'andmed ei ole täielikud';
}